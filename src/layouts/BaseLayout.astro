---
// src/layouts/BaseLayout.astro
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | My Blog</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
        /* ここにグローバルスタイルを追加 */
        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        /* 他のスタイルを追加してください */
    </style>
</head>
<body>
    <header>
        <!-- ヘッダーコンポーネントを読み込む -->
        <slot name="header" />
    </header>

    <main>
        <slot /> <!-- メインコンテンツがここに入る -->
    </main>

    <footer>
        <!-- フッターコンポーネントを読み込む -->
        <slot name="footer" />
    </footer>
</body>
</html>